# Environment
NODE_ENV=development
DEV_TRANSLATION_MODE=auto
USE_PRETTY_LOGS=false

# HTTP configuration
PORT=3000
BASE_URL=http://localhost
FRONTEND_URL=http://localhost
PUBLIC_FACING_URL=https://dev.charhub.app
PUBLIC_HOSTNAME=dev.charhub.app
LOG_LEVEL=info

# OAuth Redirect - Allowed frontend origins (used to validate redirect_uri)
# The backend will accept OAuth redirects from these origins
# Automatically includes FRONTEND_URL and PUBLIC_FACING_URL
# Add additional origins here (comma-separated) if needed
FRONTEND_URLS=http://localhost,https://dev.charhub.app

# CORS - Allowed origins (comma-separated)
# Development: ALLOWED_ORIGINS=http://localhost,https://dev.charhub.app
# Production: ALLOWED_ORIGINS=https://charhub.app
ALLOWED_ORIGINS=http://localhost,https://dev.charhub.app

# Database
DATABASE_URL=postgresql://charhub:charhub_dev_password@postgres:5432/charhub_db?schema=public

# Redis (for BullMQ job queues and translation cache)
# Set QUEUES_ENABLED=true only when Redis is reachable.
QUEUES_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cloudflare R2 (object storage / CDN)
R2_BUCKET_NAME=
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT_URL=
R2_PUBLIC_URL_BASE=

# LLM API Keys
GEMINI_API_KEY=
OPENAI_API_KEY=
GROK_API_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_PATH=/api/v1/oauth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_PATH=/api/v1/oauth/facebook/callback

# Sessions (JWT example)
JWT_SECRET=
TOKEN_EXPIRATION=7d

# Message Encryption (AES-256-GCM)
# Generate a new key with: npx tsx src/scripts/generateEncryptionKey.ts
MESSAGE_ENCRYPTION_KEY=

# Translation System
TRANSLATION_DEFAULT_PROVIDER=gemini
TRANSLATION_DEFAULT_MODEL=gemini-2.5-flash-lite
TRANSLATION_CACHE_TTL=3600
TRANSLATION_ENABLE_PRE_TRANSLATION=false

# Stripe Payment Processing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal Payment Configuration
# Sandbox: https://api-m.sandbox.paypal.com
# Production: https://api-m.paypal.com
PAYPAL_API_BASE_URL=https://api-m.sandbox.paypal.com
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# Note: PAYPAL_WEBHOOK_ID is obtained from PayPal Developer Dashboard
# Go to: Apps & Credentials > Select your app > Webhooks > Create Webhook
# Subscribe to these events: BILLING.SUBSCRIPTION.*, PAYMENT.SALE.COMPLETED
# For local development, webhooks require a public URL (use ngrok or similar)
