{
  "name": "charhub-backend",
  "version": "1.0.0",
  "description": "Backend OAuth service for Google and Facebook authentication",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "build": "prisma generate && tsc",
    "build:translations": "tsx src/scripts/buildTranslations.ts",
    "build:translations:force": "tsx src/scripts/buildTranslations.ts --force",
    "build:all": "npm run build:translations && npm run build",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest --maxWorkers=2 --forceExit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed:dry": "tsx src/scripts/seed.ts --dry-run",
    "db:seed:force": "tsx src/scripts/seed.ts --force",
    "db:seed:verbose": "tsx src/scripts/seed.ts --verbose",
    "db:seed:tags": "tsx src/scripts/seedTags.ts",
    "db:seed:tags:dry": "tsx src/scripts/seedTags.ts --dry-run"
  },
  "keywords": [
    "oauth",
    "google",
    "facebook",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.956.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@google/genai": "^1.33.0",
    "@paypal/paypal-server-sdk": "^2.1.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.1.0",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.16.0",
    "@types/socket.io": "^3.0.2",
    "bullmq": "^5.66.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "openai": "^6.1.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^10.5.0",
    "prisma": "7.1.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "stripe": "^17.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@prisma/config": "^7.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
