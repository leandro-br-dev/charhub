# ============================================
# CharHub Environment Configuration Template
# ============================================
# Copy this file to .env (development) or .env.production
# Fill in the values according to your environment
# ⚠️ NEVER commit .env or .env.production files
# ============================================

# Environment mode: development | production
# - development: Hot-reload, generates translations, includes devDependencies
# - production: Optimized, uses committed translations, no devDependencies
NODE_ENV=development
DEV_TRANSLATION_MODE=auto
USE_PRETTY_LOGS=true

# Backend docker hot reload (development only)
BACKEND_ENABLE_HOT_RELOAD=true
BACKEND_HOT_RELOAD_POLL_INTERVAL=700

# Environment suffix for cloudflare tunnel config (dev | prod)
ENV_SUFFIX=dev

# Public hostname and URL
PUBLIC_HOSTNAME=dev.charhub.app
PUBLIC_FACING_URL=https://dev.charhub.app

# HTTP configuration
PORT=3000
BASE_URL=http://localhost
FRONTEND_URL=http://localhost
LOG_LEVEL=info

# OAuth Redirect (comma-separated list of allowed URLs)
FRONTEND_URLS=http://localhost,https://dev.charhub.app

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost,https://dev.charhub.app

# ============================================
# Database Credentials
# ============================================
POSTGRES_USER=charhub
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=charhub_db
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public"

# ============================================
# Redis
# ============================================
QUEUES_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Memory System (Context Window)
# ============================================
MAX_CONTEXT_TOKENS=8000

# ============================================
# Cloudflare R2 Storage
# ============================================
# Obter de: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_BUCKET_NAME=charhub-media
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL_BASE=https://media.charhub.app

# ============================================
# LLM API Keys
# ============================================
# Gemini: https://aistudio.google.com/app/apikey
# OpenAI: https://platform.openai.com/api-keys
# Grok: https://console.x.ai/
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROK_API_KEY=your_grok_api_key_here

# ============================================
# Google OAuth
# ============================================
# Obter de: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_PATH=/api/v1/oauth/google/callback

# ============================================
# Facebook OAuth
# ============================================
# Obter de: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
FACEBOOK_CALLBACK_PATH=/api/v1/oauth/facebook/callback

# ============================================
# Sessions & Security
# ============================================
JWT_SECRET=generate_a_secure_32_char_string
TOKEN_EXPIRATION=7d
MESSAGE_ENCRYPTION_KEY=generate_a_secure_64_char_hex_string

# ============================================
# Translation System
# ============================================
TRANSLATION_DEFAULT_PROVIDER=gemini
TRANSLATION_DEFAULT_MODEL=gemini-2.5-flash-lite
TRANSLATION_CACHE_TTL=3600
TRANSLATION_ENABLE_PRE_TRANSLATION=false

# ============================================
# PayPal (Sandbox for development)
# ============================================
# Obter de: https://developer.paypal.com/dashboard/applications
PAYPAL_API_BASE_URL=https://api-m.sandbox.paypal.com
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# ============================================
# ComfyUI Image Generation
# ============================================
# Local ComfyUI instance (development: localhost, production: cloudflare tunnel)
COMFYUI_URL=http://localhost:8188
# Optional: Auth token (leave empty for local ComfyUI without auth)
COMFYUI_SERVICE_TOKEN=
COMFYUI_TIMEOUT=300000
