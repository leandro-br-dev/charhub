# Global environment configuration for Docker Compose

# Environment mode: production
NODE_ENV=production

# Backend docker hot reload (disabled in production)
BACKEND_ENABLE_HOT_RELOAD=false
BACKEND_HOT_RELOAD_POLL_INTERVAL=1000

# Environment suffix for cloudflare tunnel config
ENV_SUFFIX=prod

# Public hostname and URL
PUBLIC_HOSTNAME=charhub.app
PUBLIC_FACING_URL=https://charhub.app